{% extends "::base.html.twig" %}

{% block title %}Events{% endblock %}

{% block body %}

    <div class="all-characters-list">
        <div>
            <div class="pull-left">
                <div id="toolbar">
                    <h3 style="display: inline;">Events</h3>
                </div>
            </div>
            <div class="columns columns-right btn-group pull-right">
                <a href="{{ path('app_event_new') }}" class="btn btn-default" role="button">
                    <i class="glyphicon-plus"></i> Add Event
                </a>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>Organizer</th>
                <th>Start Time</th>
            </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.name }}</td>
                    <td>{{ event.organizer.fullDiscordUsername }}</td>
                    <td>{{ event.startTime|date('D M d h:iA T') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">There are no events scheduled!</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
