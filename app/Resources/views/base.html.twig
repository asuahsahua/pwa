<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />

        {% set _title = block('title') %}
        <title>
            Power Word Awesome{% if _title is not empty %} - {% endif%}{% block title %}{% endblock %}
        </title>

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <!-- Stylesheets -->
        <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('stylesheets/main.css') }}">
        {% block stylesheets %}{% endblock %}

        <!-- Javascripts -->
        <script type="text/javascript" src="{{ asset('assets/vendor/jquery/dist/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.js') }}"></script>
    </head>
    <body>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}">Power Word Awesome</a>
                </div>

                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        {% set controller_class = app.request.attributes.get("_controller") %}
                        <li {% if app.request.attributes.get("_controller")  == 'schedule' %}class="active"{% endif %}>
                            <a href="{{ path('app_schedule_index') }}">Schedule</a>
                        </li>
                        <li {% if controller_class starts with 'AppBundle\\Controller\\CharacterController' %}class="active"{% endif %}>
                            <a href="{{ path('app_character_index') }}">Characters</a>
                        </li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right navbar-username">
                    {% if app.user and app.user.username %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle profile-image" data-toggle="dropdown">
                                <img src="{{ app.user.avatarUrl }}" class="img-circle discord-avatar">
                                {{ app.user.discordUsername }}#{{ app.user.discriminator }}
                                 <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('logout') }}">Sign out</a></li>
                            </ul>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ hwi_oauth_login_url('discord') }}">
                                Login with <img class="discord-login-icon" title="Discord" src="{{ asset('images/discord-logo-white.png') }}"/>
                            </a>
                        </li>
                    {% endif %}
                    </ul>
                </div>

            </div>
        </nav>

        <div class="container">
            {% block body %}{% endblock %}
            {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>
